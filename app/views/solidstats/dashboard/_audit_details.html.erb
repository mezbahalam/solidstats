<div id="audit-details" class="details-panel hidden">
  <div class="audit-summary">
    <div class="audit-summary-header">
      <h3>Security Audit Summary</h3>
      <span class="audit-date">Last updated: <%= Time.now.strftime("%B %d, %Y at %H:%M") %></span>
    </div>
    <div class="audit-stats">
      <div class="audit-stat">
        <span class="stat-value"><%= @audit_output.scan(/CVE-\d+-\d+/).uniq.size %></span>
        <span class="stat-label">CVEs</span>
      </div>
      <div class="audit-stat">
        <span class="stat-value"><%= @audit_output.scan(/Name: ([^\n]+)/).uniq.size %></span>
        <span class="stat-label">Affected Gems</span>
      </div>
      <div class="audit-stat">
        <span class="stat-value"><%= @audit_output.scan(/Criticality: (High|Critical)/).size %></span>
        <span class="stat-label">High Severity</span>
      </div>
    </div>
  </div>
  
  <% if @audit_output.include?('No vulnerabilities found') %>
    <div class="no-vulnerabilities">
      <p>âœ… No vulnerabilities found in your dependencies.</p>
    </div>
  <% else %>
    <div class="audit-filters">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="high">High Severity</button>
      <button class="filter-btn" data-filter="copy-solutions">Copy All Solutions</button>
    </div>

    <div class="vulnerabilities-list">
      <% @audit_output.scan(/Name: (.*?)(?=Name: |\z)/m).each do |vulnerability_block| %>
        <% vulnerability = vulnerability_block[0] %>
        <% 
          gem_name = vulnerability.match(/Name: ([^\n]+)/)&.captures&.first
          version = vulnerability.match(/Version: ([^\n]+)/)&.captures&.first
          cve = vulnerability.match(/CVE: ([^\n]+)/)&.captures&.first
          criticality = vulnerability.match(/Criticality: ([^\n]+)/)&.captures&.first
          title = vulnerability.match(/Title: ([^\n]+)/)&.captures&.first
          solution = vulnerability.match(/Solution: ([^\n]+)/)&.captures&.first
          is_high = criticality == "High" || criticality == "Critical"
        %>

        <div class="vulnerability-card <%= is_high ? 'high-severity' : '' %>">
          <div class="vulnerability-header">
            <h4><%= gem_name %> <span class="version"><%= version %></span></h4>
            <span class="severity <%= criticality&.downcase %>"><%= criticality %></span>
          </div>
          <div class="vulnerability-body">
            <p class="title"><%= title %></p>
            <% if cve %>
              <p class="cve"><span>CVE:</span> <%= cve %></p>
            <% end %>
            <div class="solution">
              <div class="solution-header">
                <h5>Solution:</h5>
                <button class="copy-btn" data-solution="<%= gem_name %>@<%= solution %>">
                  <span class="copy-icon">ðŸ“‹</span> Copy
                </button>
              </div>
              <code><%= gem_name %>@<%= solution %></code>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<style>
