<%= tag.div(**overview_attributes) do %>
  <% metrics.each do |metric| %>
    <%= render(Solidstats::Ui::SummaryCardComponent.new(
      title: metric[:label],
      value: metric[:value],
      status: metric_status(metric),
      icon: metric[:icon],
      href: metric_href(metric),
      section: metric[:section],
      **metric_data_attributes(metric)
    )) %>
  <% end %>
<% end %>
